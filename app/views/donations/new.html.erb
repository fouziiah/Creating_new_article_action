<header> 
<% stylesheet_link_tag 'donationNew.css' %>
</header>

<div class="donation-container">
<h1>Make a Donation</h1>

<%= form_with(model: @donation, url: donations_path, 
method: 'post', local: true, id: 'donation-form') do |
    form| %>

    <div class="field">
        <%= form.label :first_name %>
        <%= form.text_area :first_name %>
    </div>

    <div class="field">
        <%= form.label :last_name %>
        <%= form.text_area :last_name %>
    </div>

    <div class="field">
        <%= form.label :email %>
        <%= form.email_field :email %>
    </div>

    <div class="field">
        <%= form.label :amount %>
        <%= form.number_field :amount %>
    </div>

    <div class="card-container">

        <div id="card-element" class="form-control"></div>
        <div id="card-errors" role="alert"></div>
    </div>
        <button id="donate-button" class="btn btn-primary"> Donate </button>

        <% end %>
</div>